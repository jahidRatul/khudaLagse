<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/login_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:src="@drawable/foodlogo" />

        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:padding="5dp"
            android:text="Login"
            android:textColor="#323232"
            android:textSize="40sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/user_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/login_text">

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="35dp"
                android:layout_height="match_parent"

                android:src="@android:drawable/stat_sys_phone_call_forward" />

            <EditText
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"

                >


            </EditText>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/password_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/user_row">

            <ImageView
                android:id="@+id/password_icon"
                android:layout_width="35dp"
                android:layout_height="match_parent"

                android:src="@android:drawable/ic_lock_idle_lock" />

            <EditText
                android:id="@+id/user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="password"
                >


            </EditText>

        </LinearLayout>

        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_row"
            android:layout_alignParentRight="true"
            android:text="Forgot password?"
            android:textColor="#F32424"

            android:textSize="18sp" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgot_password"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_shape_for_button"
            android:padding="10dp"
            android:text="LOGIN"
            android:textColor="@color/white"

            android:textFontWeight="400"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_below="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/or"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#DDDDDD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp"
                android:text="OR"

                android:textColor="#7B8FA1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"

                android:layout_weight="1"

                android:background="#DDDDDD" />

        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/or"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have account?"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="#F32424"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                />






        </LinearLayout>




    </RelativeLayout>


</RelativeLayout>